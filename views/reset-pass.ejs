<!DOCTYPE html>
<html lang="es">
<head>
    <title>Restablecer Contraseña</title>
    <%- include('./templates/head.ejs') %>
</head>
<body class="body-consulta">
    <div>
        <%- include('./templates/header-nav.ejs') %>
        
        <% if(typeof muestra !== "undefined"){ let fondo = (muestra.includes('No')) ? 'alerta' : 'acepta'; %> 
            <p class="contenedor centrar-texto <%= fondo %>">
                <%= muestra %>
            </p>
	    <% } %>
    </div>

    <main class="contenedor sombras" style="display: grid; align-items: center;">
       <div>
           <h2 class="titulo mgb-2">Restablecer:</h2>
           <form class="formulario" action="/restablecer" method="post" enctype="text/html">
               <fieldset>
                   <h4 class="titulo mgb-2">Se enviara un mail con el link para confirmar su identidad</h4>
                    <div class="formulario-campos formulario-campos__login">
                        <div class="campo">
                            <label for="email">Correo:</label>
                            <input class="input" type="email" name="email" id="email" placeholder="Email (algo@server.com)" pattern="^[^\s@]+@[^\s@]+\.[^\s@]+$" title="Formato valido (algo@mail.com)" maxlength="30"  autocomplete="off">
                        </div>  
                    <!-- <div class="campo">
                           <label for="usuario">Ingrese usuario:</label>
                           <input class="input" type="text" name="usuario" id="usuario" placeholder="Ingrese Usuario Registrado" title="Ingrese su usuario" minlength="3" maxlength="45" autocomplete="off" >
                       </div>
                       <div class="campo" id="campo-pass">
                           <label for="pass">Ingrese su contraseña:</label>
                           <input type="password" class="input" name="pass" id="pass" placeholder="Ingrese una contraseña valida" title="Ingrese su contraseña" minlength="4" autocomplete="off" >
                       </div>
                        <div class="campo">
                            <input type="checkbox" name="ver" id="ver" value="ver-pass">Mostrar contraseña
                        </div> -->
                   </div>
                   <div class="alinear-derecha flex">
                       <input class="boton w100" type="submit" value="Enviar">
                       <!-- <input class="boton w100" type="reset" value="Borrar"> -->
                       <a class="boton w100" href="/login" target="_self">Cancelar</a>
                   </div>
               </fieldset>
           </form>
       </div>
    </main>

    <%- include('./templates/footer.ejs') %> 
    <script type="module" src="/js/login.js"></script>
    <script src="/js/sweetalert2.all.min.js"></script>
    <% if(typeof alert !== "undefined"){if(alert){ %>
        <script > 
            Swal.fire({
                icon: "<%= alertIcon %>",
                title: "<%= alertTitle %>",
                text: "<%= alertMessage %>",
            })
            .then
            setTimeout(()=>{
                window.location = "/<%= ruta %>"
            },3000);
    </script>
    <% }} %>
</body>
</html>